import java.io.*;
import java.util.*;

public class _MaxSum {
   public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	int a[][]=new int[5][5];int l=0,k=0;
	for(int i=0;i<=4;i++) {
		for(int j=0;j<=4;j++) {
			a[i][j]=sc.nextInt();
			if(a[i][j]==1) {
				l=i;k=j;
			}
		}
	}
	
	int t=Math.abs(2-l)+Math.abs(2-k);
	   System.out.println(t);
   }}
